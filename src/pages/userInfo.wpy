<script>
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class UserInfo extends wepy.page {
    config = {
      navigationBarTitleText: '客户详情'
    }
    components = {
      
    }

    mixins = [check]

    data = {
      formIsShow: false,
      userInfo: {},
      usernode: {},
      clinetInfo: {},
      name: '', // 输入的用户名
      mobile: '', // 输入的电话
      remarks: '', // 备注信息
    }

    computed = {

    }

    methods = {
      getName(e) {
        // 获取名称
        this.name = e.detail.value
      },
      getMobile(e) {
        // 获取电话
        this.mobile = e.detail.value
      },
      getRemarks(e) {
        // 获取备注
        this.remarks = e.detail.value
      },
      tal(e) {
        // 拨打电话
        wx.makePhoneCall({
          phoneNumber: e.currentTarget.dataset.phone
        })
      },
      edit() {
        if (this.formIsShow) {
          this.formIsShow = false
        } else {
          this.formIsShow = true
        }
      },
      goLocalMoreInfo(e) {
        // 产看楼盘的更多信息
        this.$navigate(`/pages/localMoreInfo?id=${e.currentTarget.dataset.id}`)
      }
    }

    events = {

    }

    onLoad(options) {
      this.usernode = JSON.parse(options.usernode)
      this.name = this.usernode.name
      this.mobile = this.usernode.mobile
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.getclientInfo()
    }
    getclientInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/client`,
        method: 'POST',
        data: {
          uid: this.userInfo.id,
          clinet_id: this.usernode.id
        },
        success: data => {
          if (data.data.code == 1) {
            this.clinetInfo = data.data.data
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }

    submint() {
      console.log(this.name)
      console.log(this.mobile)
      console.log(this.remarks)
      if (this.check.isNull(this.name)) {
        wx.showModal({
          title: '',
          content: '请输入名称'
        })
        return ''
      }
      if (this.check.isPhone(this.mobile)) {
        wx.showModal({
          title: '',
          content: '请输入正确的手机号'
        })
        return ''
      }
      if (this.check.isNull(this.name)) {
        wx.showModal({
          title: '',
          content: '请输入备注'
        })
        return ''
      }
    }
  }
</script>