        wx.request({
          url: `${this.$parent.globalData.requestUrl}/getQRCode`,
          method: 'POST',
          data: {
            uid: this.userInfo.id,
            path: 'pages/index'
          },
          success: data => {
            if (data.data.code == 1) {
              this.userInfo['erweima'] = data.data.data
              this.$parent.globalData.userInfo = this.userInfo
