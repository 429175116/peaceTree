      <view>合作企业</view>
      <icon class="iconfont icon-cujiantou1"></icon>
    </view>
    <logo/>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  import logo from '../components/logo' // logo
  export default class User extends wepy.page {
    config = {
      navigationBarTitleText: '个人中心'
    }
    components = {
      nav: nav,
      logo: logo
    }

    mixins = []

    data = {
      img: '/img/test.jpg',
      userInfo: {},
      requestImgUrl: '',
      diningRoom: []
    }

    computed = {

    }

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      modifyUserInfo() {
        // 修改用户信息
        this.$navigate(`/pages/modifyUserInfo`)
      },
      goCollectionList() {
        // 进入收藏列表
        this.$navigate(`/pages/collectionList`)
      },
      goReportList() {
        // 进入报备列表
        this.$navigate(`/pages/reportList`)
      },
      goMessageList(e) {
        // 进入消息列表
        this.$navigate(`/pages/messageList`)
      },
      goQRCode() {
        // 进入收藏列表
        this.$navigate(`/pages/QRCode`)
      },
      myShere() {
        // 进入收藏列表
        this.$navigate(`/pages/shere`)
      },
      goMerchant() {
        // 进入合作商家
        this.$navigate(`/pages/merchant`)
      }
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
    }
    onShow() {
      this.getUserInfo()
    }
    getUserInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/users`,
        method: 'POST',
        data: {
          uid: this.userInfo.id
        },
        success: data => {
          if (data.data.code == 1) {
            this.userInfo = this.$parent.null2str(data.data.data)
            this.$parent.globalData.userInfo = this.userInfo
            this.$apply()
          }
        }
      })
    }
  }
</script>