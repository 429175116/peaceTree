  page{
    background-color: #f7f7f7;
  }
  .list{
    width: 670rpx;
    height: auto;
    padding: 0 40rpx;
  }
  .item{
    width: 630rpx;
    height: auto;
    padding: 30rpx;
    background-color: #fff;
    border-radius: 30rpx;
    margin-top: 50rpx;
  }
  .title{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .name{
    font-size: 35rpx;
    font-weight: 600;
    color: #343434;
  }
  .time{
    font-size: 22rpx;
    color: #979797;
  }
  .con{
    font-size: 29rpx;
    color: #343434;
    line-height: 45rpx;
    margin-top: 50rpx;
  }
  .prompt{
    width: 750rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    color: #9e9e9e;
    font-size: 28rpx;
  }
</style>
<template>
  <view>
    <view class="list">
      <repeat for="{{messageList}}" item="item">
        <view class="item">
          <view class="title">
            <view class="name">{{item.title}}</view>
            <view class="time">{{item.time}}</view>
          </view>
          <view class="con">{{item.content}}</view>
        </view>
      </repeat>
    </view>
    <view class="prompt">共有{{messageList.length}}条消息纪录，已无更多内容</view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class MessageList extends wepy.page {
    config = {
      navigationBarTitleText: '消息列表'
    }
    components = {
    }

    mixins = []

    data = {
      userInfo: {},
      messageList: []
    }

    computed = {

    }

    methods = {
      
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.getMessageList()
    }
    getMessageList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/news`,
        method: 'POST',
        data: {
          uid: this.userInfo.id
        },
        success: data => {
          if (data.data.code == 1) {
            this.messageList = this.$parent.null2str(data.data.data)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
  }
</script>