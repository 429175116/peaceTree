<style lang="less">
.con{
  width: 690rpx;
  padding: 30rpx;
}
.con view{
  margin: 30rpx 0;
}
.title{
  width: 690rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #343434;
}
.getData{
  width: 690rpx;
  height: 80rpx;
  font-size: 30rpx;
  background-color: #F7F7F7;
}
.submit{
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #7BB312;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}
.jumpVver{
  width: 690rpx;
  height: 60rpx;
  text-align: center;
  font-size: 25rpx;
  color: #979797;
}
</style>
<template>
  <view>
    <view class="con">
      <view class="title">填写手机号</view>
      <input class="getData" type="number" placeholder="输入手机号" value="" bindinput="getData" />
      <view class="submit" @tap="submit">下一步</view>
      <view class="jumpVver" @tap="jumpVver">跳过此步</view>
    </view>
    <!-- <button open-type="getUserInfo" id='getUserInfo' lang="zh_CN" @getuserinfo="onGetUserInfo"></button> -->
    <button open-type="getUserInfo" id='getUserInfo' wx:if="{{userInfoButtonShow}}" lang="zh_CN" @getuserinfo="onGetUserInfo"></button>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class LoginRegistered extends wepy.page {
    config = {
      navigationBarTitleText: '注册'
    }
    components = {}

    mixins = []

    data = {
      userInfoID: '',
      getMobile: '',
      mobile: '',
      userInfoButtonShow: true,
    }

    computed = {

    }

    methods = {
      jumpVver() {
        this.$redirect('index')
      },
      submit() {
        // this.$navigate('loginVerification')
        // return ''
        // this.getMobile
        // 获取验证码
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/login_mobile`,
          method: 'POST',
          data: {
            mobile: this.getMobile,
            uid: this.userInfoID
          },
          success: data => {
            if (data.data.code == 1) {
              this.$redirect('index')
            } else {
              wx.showModal({
                title: '',
                content: data.data.msg
              })
            }
          }
        })
      },
      getData(e) {
        // 获取手机号
        this.getMobile = e.detail.value
      }
    }

    events = {

    }

    onLoad(options) {
      this.onGetUserInfo()
    }
         // 获取用户信息
    onGetUserInfo() {
      // 查看是否授权
      wx.getSetting({
        success: res => {
          if (res.authSetting['scope.userInfo']) {
            this.userInfoButtonShow = false
            // 已经授权，可以直接调用 getUserInfo 获取头像昵称
            wx.getUserInfo({
              success: res => {
                this.userInfo = res.userInfo
                this.$parent.globalData.userInfo = this.userInfo
                if (this.userInfo) {
                  // 数据生效
                  this.$apply()
                  // 提交用户信息
                  this.setUserInfo(this.userInfo)
                  this.$parent.globalData.userInfo = this.userInfo
                  this.$apply()
                }
              }
            })
          } else {
            // this.clickWeekBangs()
          }
        }
      })
    }
    // 提交用户信息
    setUserInfo(userInfo) {
      wepy.login({
        success: res => {
          if (res.code) {
            console.log(res.code)
            this.code = res.code
            wx.request({
              url: `${this.$parent.globalData.requestUrl}/login`,
              method: 'POST',
              data: {
                code: res.code,
                img: this.userInfo.avatarUrl,
                nickname: this.userInfo.nickName
              },
              success: data => {
                console.log(data)
                if (data.data.code == 1) {
                  data = data.data.data
                  this.$parent.globalData.userInfoID = data.id
                  this.userInfoID = data.id
                  this.mobile = data.mobile
                  if (this.mobile) {
                    this.$redirect('index')
                  }
                  this.$apply()
                } else {
                  wx.showModal({
                    title: '',
                    content: data.data.errmsg
                  })
                }
              }
            })
          } else {
            console.log('登录失败！' + res.errMsg)
          }
        }
      })
    }
  }
</script>