<template>
  <view>
    <view class="search">
      <view class="selAddress" @tap="goSelCity">
        {{cityNode.name}}
        <icon class="iconfont icon-jiantou-xia"></icon>
      </view>
      <view class="searchCon">
        <icon class="iconfont icon-sousuo"></icon>
        <input type="text" placeholder="请输入楼盘名称或区域" bindinput="searchRun"  />
      </view>
      <icon class="address iconfont icon-dingweisvg-"></icon>
    </view>
    <swiper class='swiper' indicator-dots="true" autoplay='true' interval='5000' duration='2000'>
      <repeat for="{{swiperList}}" item="item">
        <swiper-item>
          <image src="{{ requestImgUrl + item.img }}" />
        </swiper-item>
      </repeat>
    </swiper>
    <view class="sort">
      <view class="sel" @tap="goPropertyLocal">
        <image class='header-bg' src="/img/test.jpg" />
        <view class="con">
          <text>本地楼盘</text>
          <view></view>
        </view>
      </view>
      <view class="sel" @tap="goSurroundingLocal">
        <image class='header-bg' src="/img/test.jpg" />
        <view class="con">
          <text>周边楼盘</text>
          <view></view>
        </view>
      </view>
      <view class="sel" @tap="goCultureLocal">
        <image class='header-bg' src="/img/test.jpg" />
        <view class="con">
          <text>文旅楼盘</text>
          <view></view>
        </view>
      </view>
    </view>
    <view class="listTitle" wx:if="{{searchList.length > 0}}">搜索结果</view>
    <view class="list" wx:if="{{searchList.length > 0}}">
      <repeat for="{{searchList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="goLocalInfo">
          <view class="pad" wx:if="{{item.pad == '1'}}">垫拥</view>
          <image src="{{requestImgUrl + item.img}}" />
          <view class="con">
            <view class="title">
              <text>{{item.name}}</text>
              <view class="heatLocal" wx:if="{{item.status == '2'}}">热推</view>
              <view class="newLocal" wx:if="{{item.status == '1'}}">新盘</view>
            </view>
            <view class="address">
              <icon class="iconfont icon-dingweiweizhi"></icon>
              {{item.floor_address}}
            </view>
            <view class="price">{{item.money}}元/㎡</view>
          </view>
        </view>
      </repeat>
      <view class="listPrompt">共有{{localList.length}}}个项目，已无更多内容</view>
    </view>
    <view class="listTitle">热推楼盘</view>
    <view class="list">
      <repeat for="{{localList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="goLocalInfo">
          <view class="pad" wx:if="{{item.pad == '1'}}">垫拥</view>
          <image src="{{requestImgUrl + item.img}}" />
          <view class="con">
            <view class="title">
              <text>{{item.name}}</text>
              <view class="heatLocal" wx:if="{{item.status == '2'}}">热推</view>
              <view class="newLocal" wx:if="{{item.status == '1'}}">新盘</view>
            </view>
            <view class="address">
              <icon class="iconfont icon-dingweiweizhi"></icon>
              {{item.floor_address}}
            </view>
            <view class="price">{{item.money}}元/㎡</view>
          </view>
        </view>
      </repeat>
      <view class="listPrompt">共有{{localList.length}}}个项目，已无更多内容</view>
    </view>
    <button open-type="getUserInfo" id='getUserInfo' wx:if="{{userInfoButtonShow}}" lang="zh_CN" @getuserinfo="onGetUserInfo"></button>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '平安树'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      img: '/img/test.jpg',
      userInfoButtonShow: true,
      userInfo: {},
      cityNode: {},
      requestImgUrl: '',
      searchList: [], // 搜索内容列表
      localList: [], // 楼盘列表
      swiperList: [] // 轮播列表
    }

    computed = {

    }

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      goSelCity() {
        // 城市选择
        this.$navigate(`/pages/citySel`)
      },
      goPropertyLocal() {
        // 本地楼盘
        this.$navigate(`/pages/propertyLocal`)
      },
      goSurroundingLocal() {
        // 周边楼盘
        this.$navigate(`/pages/surroundingLocal`)
      },
      goCultureLocal() {
        // 文旅地产
        this.$navigate(`/pages/cultureLocal`)
      },
      goLocalInfo(e) {
        // 进入楼盘详情
        this.$navigate(`/pages/localInfo?id=${e.currentTarget.dataset.id}`)
      },
      searchRun(e) {
        // 搜索执行
        // 获取搜索内容
        console.log(e.detail.value)
      }
    }

    events = {

    }

    onLoad(options) {
      // 获取用户信息
      this.onGetUserInfo()
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      // 获取楼盘列表
      this.getLocalList()
    }
    onShow() {
      this.cityNode = this.$parent.globalData.cityNode
      if (Object.keys(this.cityNode).length == 0) {
        // 加载城市列表,获取定位，获取所在城市
        this.getLocation()
      }
    }
    getLocalList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index`,
        method: 'GET',
        // data: {
        //   mobile: this.userName,
        //   password: this.userPaw
        // },
        success: data => {
          if (data.data.code == 1) {
            data = data.data.data
            // 获取顶部轮播图
            this.swiperList = data.banner
            // 获取楼盘列表
            this.localList = data.floor
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
    getLocation() {
      wx.getLocation({
        type: 'wgs84',   //默认为 wgs84 返回 gps 坐标，gcj02 返回可用于 wx.openLocation 的坐标 
        success: res => { 
          var longitude = res.longitude
          var latitude = res.latitude
          this.loadCity(longitude, latitude)
        }
      })
    }
    loadCity(longitude, latitude) {
      wx.request({
        url: 'https://api.map.baidu.com/geocoder/v2/?ak=FMn3zXubg5BmfZZSsFVP28XjMqdPxmee&location=' + latitude + ',' + longitude + '&output=json',
        data: {},
        header: {
          'Content-Type': 'application/json'
        },
        success: res=> {
          var city = res.data.result.addressComponent.city;
          this.getCityId(city)
        }
      })
    }
    getCityId(cityName) {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/city`,
        method: 'GET',
        success: data => {
          if (data.data.code == 1) {
            var cityList = data.data.data
            var i = 0
            for (i in cityList) {
              if (cityName == cityList[i].name) {
                this.cityNode = {'name': cityList[i].name, 'id': cityList[i].id}
                this.$parent.globalData.cityNode ={'name': cityList[i].name, 'id': cityList[i].id}
                this.$apply()
                // return cityNode
                break
              }
            }
          }
        }
      })
    }


     // 获取用户信息
    onGetUserInfo() {
      // 查看是否授权
      wx.getSetting({
        success: res => {
          if (res.authSetting['scope.userInfo']) {
            this.userInfoButtonShow = false
            // 已经授权，可以直接调用 getUserInfo 获取头像昵称
            wx.getUserInfo({
              success: res => {
                this.userInfo = res.userInfo
                this.$parent.globalData.userInfo = this.userInfo
                this.$parent.globalData.userInfo.id = '3'
                console.log(this.userInfo)
                if (this.userInfo) {
                  this.authorizationButton = false
                  this.avatarUrl = this.userInfo.avatarUrl
                  this.nickName = this.userInfo.nickName
                  // 数据生效
                  this.$apply()
                  // 提交用户信息
                  this.setUserInfo(this.userInfo)
                  // 登陆
                  // this.userLogin(this.userInfo)
                  this.$parent.globalData.userInfo = this.userInfo
                  this.$apply()
                }
              }
            })
          } else {
            // this.clickWeekBangs()
          }
        }
      })
    }
    // 提交用户信息
    setUserInfo(userInfo) {
      wepy.login({
        success: res => {
          if (res.code) {
            console.log(res.code)
            this.code = res.code
            wx.request({
              url: `${this.$parent.globalData.requestUrl}/api/addOrUpdateUser`,
              method: 'POST',
              data: {
                code: res.code,
                nick_name: this.userInfo.nickName,
                profile: this.userInfo.avatarUrl
              },
              success: data => {
                console.log(data)
                if (data.data.success) {
                  // 获取用户信息,及openID  并存入全局
                  this.userInfo = data.data.user
                  this.openId = this.userInfo.open_id
                  this.$parent.globalData.userInfo = this.userInfo
                  this.$parent.globalData.openId = this.openId
                  // 用户收藏的书籍
                  this.myStore()
                  this.$apply()
                } else {
                  wx.showModal({
                    title: '',
                    content: data.data.errmsg
                  })
                }
              }
            })
          } else {
            console.log('登录失败！' + res.errMsg)
          }
        }
      })
    }
  }
</script>