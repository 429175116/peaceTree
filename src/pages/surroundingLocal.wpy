<script>
  import wepy from 'wepy'
  import addressSearch from '../components/addressSearch' // 顶部搜索
  import productItem from '../components/productItem' // 列表内容组件
  export default class SurroundingLocal extends wepy.page {
    config = {
      navigationBarTitleText: '周边楼盘'
    }
    components = {
      addressSearch: addressSearch,
      productItem: productItem
    }

    mixins = []

    data = {
      img: '/img/test.jpg',
      test: '',
      cityNode: {},
      userInfo: {},
      requestImgUrl: '',
      localList: []
    }

    computed = {

    }

    methods = {
      goLocalInfo(e) {
        // 进入楼盘详情
        this.$navigate(`/pages/localInfo?id=${e.currentTarget.dataset.id}`)
      },
      goSelCity() {
        // 城市选择
        this.$navigate(`/pages/citySel`)
      },
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
    }
    onShow() {
      this.cityNode = this.$parent.globalData.cityNode
      this.getLocalList()
    }
    getLocalList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/around_floor`,
        method: 'POST',
        data: {
          city_id: this.cityNode.id
        },
        success: data => {
          if (data.data.code == 1) {
            this.localList = data.data.data
            
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
  }
</script>