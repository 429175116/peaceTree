<style lang="less">

.reportButton{
  width: 750rpx;
  height: 150rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #979797;
}
.reportButton view{
  width: 673rpx;
  height: 94rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #7bb312;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.setUserInfo{
  width: 690rpx;
  padding: 50rpx 30rpx;
  display: flex;
  // align-items: center;
  justify-content: space-between;
}
.con{
  width: 490rpx;
  font-size: 30rpx;
}
.info{
  font-size: 25rpx;
  color: #979797;
  padding-top: 20rpx;
  display: flex;
  justify-content: flex-start;
}
.info view{
  width: 143rpx;
  height: 68rpx;
  border: 1rpx solid;
  font-size: 27rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.men{
  color: #788fff;
  border-color: #eaf0fe;
  background-color: #eaf0fe;
}
.woman{
  color: #fa3c48;
  background-color: #ffe6e7;
  border-color: #ffe6e7;
}
.lable{
  width: 200rpx;
  font-size: 30rpx;
  color: #343434;
}
input{
  color: #343434;
  border-bottom: 1rpx solid #f2f2f2;
}
</style>
<template>
  <view>
    <view class="setUserInfo">
      <lable>客户姓名</lable>
      <view class="con">
        <input type="text" placeholder="请填写姓名(必填)" bindinput="getName" />
        <view class="info">
          <view class="{{selGender == 1?'men':''}}" @tap="selGender">先生</view>
          <view class="{{selGender == 2?'woman':''}}" @tap="selGender">女士</view>
        </view>
      </view>
    </view>
    <view class="setUserInfo">
      <lable>客户电话</lable>
      <view class="con">
        <input type="number" placeholder="请填写电话(必填)" bindinput="getMobile" />
        <view class="info">建议输入全号，若项目可隐号报备，系统自动做隐号处理</view>
      </view>
    </view>
    <view class="setUserInfo">
      <checkbox-group bindchange="selCommodity" data-value="{{1}}">
        <checkbox checked="{{1}}"/>
        报备楼盘
      </checkbox-group>
    </view>
    
    <view class="reportButton">
      <view wx:if="{{checksSel.length > 0}}" @tap="newClient">添加到报备</view>
      <view wx:if="{{checksSel.length == 0}}" @tap="newClient">添加客户</view>
    </view>
    
  </view>
</template>

<script>
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class SetClient extends wepy.page {
    config = {
      navigationBarTitleText: '录入新客'
    }
    components = {

    }

    mixins = [check]

    data = {
      img: '/img/test.jpg',
      userInfo: null,
      selGender: 1,
      clientName: '',
      clientMobile: '',
      checksSel: ['']
    }

    computed = {

    }

    methods = {
      selCommodity(e) {
        this.checksSel = e.detail.value
      },
      selGender() {
        if (this.selGender) {
          this.selGender = 2
        } else {
          this.selGender = 1
        }
      },
      getName(e) {
        // 获取姓名
        this.clientName = e.detail.value
      },
      getMobile(e) {
        // 获取电话
        this.clientMobile = e.detail.value
      }
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
    }
    newClient() {
      if (this.check.isNull(this.clientName)) {
        wx.showModal({
          title: '',
          content: '请输入客户名称'
        })
        return ''
      }
      if (this.check.isPhone(this.clientMobile)) {
        wx.showModal({
          title: '',
          content: '请输入正确的手机号'
        })
        return ''
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/add_client`,
        method: 'POST',
        data: {
          uid: this.userInfo.id,
          name: this.clientName,
          mobile: this.clientMobile,
          sex: this.selGender
        },
        success: data => {
          if (data.data.code == 1) {
            if (this.checksSel.length > 0) {
              data = this.$parent.null2str(data.data.data)
              var selList = []
              selList.push({'id': data, 'name': this.clientName, 'mobile': this.clientMobile})
              // 选中的用户存入全局
              this.$parent.globalData.reportUserList = selList
              this.$navigate(`/pages/reportLocal`)
            } else {
              wx.showModal({
                title: '',
                content: '客户录入成功'
              })
              wx.navigateBack({
                data: -1
              })
            }
            
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
  }
</script>