}
.userList .item icon{
  font-size: 40rpx !important;
  color: #7d9bff;
  margin-left: 20rpx;
}
</style>
<template>
  <view>
    <!-- <search></search> -->
    <view class="search">
      <icon class="iconfont icon-sousuo"></icon>
      <input type="text" placeholder="输入客户名称" bindinput="searchRun" />
    </view>
    <view class="goLocalOrNewUser">
      <view @tap="goReportLocal">报备楼盘</view>
      <view @tap="goNewUser">录入新客</view>
    </view>
    <view class="userList">
      <!-- <view class="type">A</view> -->
      <!-- userList -->
      <repeat for="{{searchList}}" item="item">
        <view class="item" data-index="{{index}}" data-id="{{item.id}}" @tap="goUserInfo">
          <view>{{item.name}}</view>
          <view>
            {{item.mobile}}
            <icon class="iconfont icon-dianhua4"></icon>
          </view>
        </view>
      </repeat>
      

    </view>
    <nav @childFn.user="goPage" />
  </view>
</template>

<script>
  import wepy from 'wepy'
  import search from '../components/search' // 底部导航
  import nav from '../components/nav' // 底部导航
  export default class UserList extends wepy.page {
    config = {
      navigationBarTitleText: '录入新客'
    }
    components = {
      search: search,
      nav: nav
    }

    mixins = []

    data = {
      img: '/img/test.jpg',
      test: '',
      userInfo: {},
      requestImgUrl: '',
      userList: [],
      searchList: []
    }

    computed = {

    }

    methods = {
      goUserInfo(e) {
        // 查看用户信息
        let node = JSON.stringify(this.userList[e.currentTarget.dataset.index])
        this.$navigate(`/pages/userInfo?usernode=${node}`)
      },
      goReportLocal() {
        // 进入报备楼盘页
        this.$navigate(`/pages/reportLocal`)
      },
      goNewUser() {
        // 进入录入客户页
        this.$navigate(`/pages/setClient`)
      },
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      searchRun(e) {
        if (e.detail.value == '') {
          this.searchList = this.userList
          return ''
        }
        // 搜索执行
        // 获取搜索内容
        this.getSearchList(e.detail.value)
      }
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
    }
    onShow() {
      this.getUserList()
    }
    getUserList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/client_list`,
        method: 'POST',
        data: {
          uid: this.userInfo.id
        },
        success: data => {
          if (data.data.code == 1) {
            this.userList = data.data.data
            this.searchList = this.userList
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
    getSearchList(search) {
      // 执行搜索
      let i = 0
      let userList = this.userList
      let searchList = []
      for (i in userList) {
        if (userList[i].name.match(search)) {
          searchList.push(userList[i])
        }
      }
      this.searchList = searchList
    }
  }
</script>