<style lang="less">
  .typeSel{
    width: 690rpx;
    height: 90rpx;
    padding: 0 30rpx;
    display:flex;
    align-items:center;
    justify-content:space-between;
  }
  .typeSel view,
  .typeSel icon{
    display:flex;
    align-items:center;
    justify-content:space-between;
    font-size: 30rpx !important;
    color: #a4a4a4;
  }
</style>
<template>
  <view>
    <addressSearch></addressSearch>
    <view class="typeSel">
      <view>
        区域
        <icon class="iconfont icon-jiantou-xia"></icon>
      </view>
      <view>
        总价
        <icon class="iconfont icon-jiantou-xia"></icon>
      </view>
      <view>
        垫拥
        <icon class="iconfont icon-jiantou-xia"></icon>
      </view>
      <view>
        更多
        <icon class="iconfont icon-jiantou-xia"></icon>
      </view>
    </view>
    <view class="list">
      <!-- localList -->
      <repeat for="{{localList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="goLocalInfo">
          <view class="pad">垫拥</view>
          <image data-id="" src="{{requestImgUrl + item.img}}" />
          <view class="con">
            <view class="title">
              <text>{{item.name}}</text>
              <view class="heatLocal" wx:if="{{item.state == '2'}}">热推</view>
              <view class="newLocal" wx:if="{{item.state == '1'}}">新盘</view>
            </view>
            <view class="address">
              <icon class="iconfont icon-dingweiweizhi"></icon>
              {{item.floor_address}}
            </view>
            <view class="price">{{item.money}}元/m</view>
          </view>
        </view>
      </repeat>
      <view class="listPrompt">共有{{localList.length}}个项目，已无更多内容</view>
    </view>
  </view>
  
</template>

<script>
  import wepy from 'wepy'
  import addressSearch from '../components/addressSearch' // 顶部搜索
  import productItem from '../components/productItem' // 列表内容组件
  export default class PropertyLocal extends wepy.page {
    config = {
      navigationBarTitleText: '本地楼盘'
    }
    components = {
      addressSearch: addressSearch,
      productItem: productItem
    }

    mixins = []

    data = {
      img: '/img/test.jpg',
      cityNode: {},
      userInfo: {},
      requestImgUrl: '',
      localList: []
    }

    computed = {

    }

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      goLocalInfo(e) {
        // 进入楼盘详情
        this.$navigate(`/pages/localInfo?id=${e.currentTarget.dataset.id}`)
      },
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.cityNode = this.$parent.globalData.cityNode
      this.getLocalList()
    }
    getLocalList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/local_floor`,
        method: 'POST',
        data: {
          city_id: this.cityNode.id
        },
        success: data => {
          if (data.data.code == 1) {
            this.localList = data.data.data
            
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
  }
</script>