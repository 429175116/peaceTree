  .list{
    width: 750rpx;
    padding: 0;
  }
  image{
    width: 85rpx;
    height: 85rpx;
    border-radius: 85rpx;
  }
  icon{
    font-size: 26rpx !important;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #979797;
    margin-left: 20rpx;
  }
  .tiem{
    width: 690rpx;
    height: 133.3rpx;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
  }
  .tiem view {
    font-size: 34rpx;
    color: #343434;
  }
  .con{
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  input{
    font-size: 33rpx;
